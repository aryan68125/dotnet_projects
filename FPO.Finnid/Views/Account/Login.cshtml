
@{
    ViewData["Title"] = "Login";
}
<link href="~/Content/assets/css/Style.css" />

<div class="container cus-hieght">
    <div class="row pb-4">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">
            <div class="card sign_in_card">
                <div class="card-body">
                    <h2 class="card-title text-center">Sign in</h2>
                    <div class="input-group input_style">
                        <input type="text" id="txtemail" class="form-control" placeholder="Email" required>
                        <div class="input-group-append">
                            <span class="input-group-text bg-white cus-append">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                    <div class="input-group mb-2 input_style">
                        <div class="pwd">
                            <input type="password" id="txtpassword" class="form-control" placeholder="Password" required>
                            <span class="p-viewer">
                                <i class="fas fa-eye-slash" id="eye"></i>
                            </span>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text bg-white cus-append">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                        </div>

                    </div>
                    <div class="row my-1">
                        <div class="col-sm-2">
                            <button type="button" class="btn btn-primary button_style" id="signin" onclick="Login()">Login</button>
                        </div>
                        <div class="col-sm-10 pt-2 text-end">
                            <a href="/Account/SignUp" class="link_style">Don't have an account?</a>
                        </div>
                    </div>
                    <div class="row my-2">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@section Scripts {
    <script src="~/ProjectJS/Account/account.js"></script>
}