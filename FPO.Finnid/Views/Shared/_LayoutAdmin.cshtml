@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Finind - Dashboard</title>
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel/chartist/chartist.min.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminDashboard.css">
    <link rel="stylesheet" href="~/Content/assets/css/AdminPanel.css">
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <script src="https://kit.fontawesome.com/cfa1dfe582.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-scroller">
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="navbar-brand-wrapper d-flex align-items-center">
                <a class="navbar-brand brand-logo" href="index.html">
                    <img src="../images/logo.png" alt="logo" class="logo-dark" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center flex-grow-1">
                <h5 class="mb-0 font-weight-medium d-none d-lg-flex">Welcome stallar dashboard!</h5>
                <ul class="navbar-nav navbar-nav-right ml-auto">
                    <form class="search-form d-none d-md-block" action="#">
                        <i class="icon-magnifier"></i>
                        <input type="search" class="form-control" placeholder="Search Here" title="Search here">
                    </form>
                    <li class="nav-item"><a href="#" class="nav-link"><i class="icon-basket-loaded"></i></a></li>
                    <li class="nav-item"><a href="#" class="nav-link"><i class="icon-chart"></i></a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator message-dropdown" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <i class="icon-speech"></i>
                            <span class="count">7</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list pb-0" aria-labelledby="messageDropdown">
                            <a class="dropdown-item py-3">
                                <p class="mb-0 font-weight-medium float-left">You have 7 unread mails </p>
                                <span class="badge badge-pill badge-primary float-right">View all</span>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="../images/logo.png" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">Marian Garner </p>
                                    <p class="font-weight-light small-text"> The meeting is cancelled </p>
                                </div>
                            </a>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="../images/logo.png" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">David Grey </p>
                                    <p class="font-weight-light small-text"> The meeting is cancelled </p>
                                </div>
                            </a>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <img src="../images/logo.png" alt="image" class="img-sm profile-pic">
                                </div>
                                <div class="preview-item-content flex-grow py-2">
                                    <p class="preview-subject ellipsis font-weight-medium text-dark">Travis Jenkins </p>
                                    <p class="font-weight-light small-text"> The meeting is cancelled </p>
                                </div>
                            </a>
                        </div>
                    </li>
                    <li class="nav-item dropdown d-none d-xl-inline-flex user-dropdown">
                        <a class="nav-link dropdown-toggle" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <img class="img-xs rounded-circle ml-2" src="../images/logo.png" alt="Profile image"> <span class="font-weight-normal"> @User.FindFirst(ClaimTypes.GivenName).Value </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                            <div class="dropdown-header text-center">
                                <img class="img-md rounded-circle" src="../images/logo.png" alt="Profile image">
                                <p class="mb-1 mt-3">@User.FindFirst(ClaimTypes.GivenName).Value</p>
                                <p class="font-weight-light text-muted mb-0">@User.FindFirst(ClaimTypes.Email).Value</p>
                            </div>
                            <a class="dropdown-item" href="/User/Profile"><i class="dropdown-item-icon icon-user text-primary"></i> My Profile</a>
                            <a class="dropdown-item" href="/account/logout"><i class="dropdown-item-icon icon-power text-primary"></i>Sign Out</a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-category">
                        <span class="nav-link">Menu</span>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="/Dashboard">
                            <span class="menu-title">Dashboard</span>
                            <i class="icon-screen-desktop menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="~/Report/My_Cart">
                            <span class="menu-title">My Cart</span>
                            <i class="menu-icon fa-solid fa-cart-shopping"></i>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="~/Report/My_Order">
                            <span class="menu-title">My Orders</span>
                            <i class="menu-icon fa-solid fa-truck-fast"></i>
                        </a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link" href="~/Report/PG_Report">
                            <span class="menu-title">PG Report</span>
                            <i class="menu-icon fa-regular fa-file-excel"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © fpo.finind.in @@2024 </span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"><a href="https://fpo.finnid.in/" target="_blank">fpo.finnid.in</a></span>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <script src="~/Content/assets/css/AdminPanel/js/vendor.bundle.base.js"></script>
    <script src="~/Content/assets/css/AdminPanel/chartist/chartist.min.js"></script>
    <script src="~/Content/assets/css/AdminPanel/moment/moment.min.js"></script>
    <script src="~/Content/assets/css/AdminPanel/daterangepicker/daterangepicker.js"></script>
    <script src="~/Content/assets/css/AdminPanel/chartist/chartist.min.js"></script>
    <script src="~/Content/assets/css/AdminPanel/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Content/assets/css/AdminPanel/js/off-canvas.js"></script>
    <script src="~/Content/assets/css/AdminPanel/js/misc.js"></script>
    <script src="~/Content/assets/css/AdminPanel/js/dashboard.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>